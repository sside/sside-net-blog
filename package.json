{
    "name": "sside-net-blog",
    "description": "sside.net blog",
    "version": "0.0.0",
    "scripts": {
        "lerna:reinstall": "lerna clean --yes && lerna bootstrap",
        "dev:docker": "docker-compose up",
        "dev:frontend": "yarn frontend dev",
        "dev:backend": "yarn backend start:dev",
        "dev:environment": "yarn environment watch",
        "test": "run-p test:*",
        "test:environment": "yarn backend test",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lerna:frontend": "lerna --scope @sside-net-blog/frontend ",
        "lerna:backend": "lerna --scope @sside-net-blog/backend ",
        "lerna:environment": "lerna --scope @sside-net-blog/environment ",
        "dependencies:check": "run-s update:check:*",
        "dependencies:check:root": "ncu",
        "dependencies:check:frontend": "cd app/frontend && ncu",
        "dependencies:check:backend": "cd app/backend && ncu",
        "dependencies:check:environment": "cd library/environment && ncu",
        "dependencies:update": "run-s dependencies:update:* && yarn install && yarn run lerna:reinstall",
        "dependencies:update:root": "ncu -u",
        "dependencies:update:frontend": "cd app/frontend && ncu -u",
        "dependencies:update:backend": "cd app/backend && ncu -u",
        "dependencies:update:environment": "cd library/environment && ncu -u",
        "frontend": "cd app/frontend && yarn",
        "backend": "cd app/backend && yarn",
        "environment": "cd library/environment && yarn",
        "postinstall": "lerna bootstrap",
        "prepare": "husky install"
    },
    "dependencies": {
        "npm-run-all": "^4.1.5"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "husky": "^6.0.0",
        "lerna": "^4.0.0",
        "npm-check-updates": "^11.5.1",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0"
    },
    "main": "index.js",
    "author": "sside <sside@live.jp>",
    "homepage": "https://github.com/sside/sside-net-blog",
    "repository": "https://github.com/sside/sside-net-blog.git",
    "bugs": {
        "url": "https://github.com/sside/sside-net-blog/issues"
    },
    "keywords": ["GraphQL", "Nest.js", "Nuxt.js", "TypeScript", "Vue.js", "blog"],
    "license": "MIT"
}
