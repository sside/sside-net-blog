{
    "name": "sside-net-blog",
    "description": "sside.net blog",
    "version": "0.0.0",
    "author": "sside <sside@live.jp>",
    "bugs": {
        "url": "https://github.com/sside/sside-net-blog/issues"
    },
    "dependencies": {
        "npm-run-all": "^4.1.5"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "fixpack": "^4.0.0",
        "husky": "^6.0.0",
        "lerna": "^4.0.0",
        "npm-check-updates": "^11.5.1",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0"
    },
    "homepage": "https://github.com/sside/sside-net-blog",
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "keywords": [
        "GraphQL",
        "Nest.js",
        "Nuxt.js",
        "TypeScript",
        "Vue.js",
        "blog"
    ],
    "license": "MIT",
    "main": "index.js",
    "repository": "https://github.com/sside/sside-net-blog.git",
    "scripts": {
        "dependencies:check": "run-s update:check:*",
        "dependencies:check:frontend": "cd app/frontend && ncu",
        "dependencies:update": "run-s dependencies:update:* && yarn install",
        "dependencies:update:frontend": "cd app/frontend && ncu -u",
        "frontend": "cd app/frontend && yarn",
        "lerna:reinstall": "lerna clean --yes && lerna bootstrap",
        "postinstall": "lerna bootstrap"
    }
}
